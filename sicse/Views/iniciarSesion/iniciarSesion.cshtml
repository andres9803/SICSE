@model sicse.Models.Usuario
<!--tomar encuenta si la s es Mayuscula o minuscula-->
@{
    ViewBag.Title = "iniciarSesion";
}

<h2>Iniciar Sesión</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <hr />
       
        <div class="container">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2" for="textinput">Documento:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.documento, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="help-block" style="color:#ffffff;">Ayuda &nbsp;&nbsp;<i class="glyphicon glyphicon-question-sign alert-info" aria-hidden="true"></i></span>
                    @Html.ValidationMessageFor(model => model.documento, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <label class="control-label col-md-2" for="textinput">Contraseña:</label>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.clave, new { htmlAttributes = new { @class = "form-control" } })
                    <span class="help-block" style="color:#ffffff;">Ayuda &nbsp;&nbsp;<i class="glyphicon glyphicon-question-sign alert-info" aria-hidden="true"></i></span>
                    @Html.ValidationMessageFor(model => model.clave, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2" for="textinput">Confirmar contraseña:</label>
                <div class="col-md-10">
                    <input id="textinput" name="textinput" type="text" placeholder="contraseñar" class="form-control input-md">
                    <span style="color:#ffffff; text-align:right; ">Ayuda &nbsp;&nbsp;<i class="glyphicon glyphicon-question-sign alert-info" aria-hidden="true"></i></span>
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Iniciar Sesion" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}